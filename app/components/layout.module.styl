@import "../styles/_shared";

.container {
	display: flex;
	flex-flow: column;
	justify-content: space-between;
	min-height: 100vh;
}

.body {
	display: flex;
	flex-direction: column;
	flex-grow: 1;
	width: 90%;
	max-width: 50rem;
	min-height: 80vh;
	margin: 0 auto;
	padding-top: 5rem;
	padding-bottom: 5rem;

	+mobile() {
		padding-top: 1rem;
		padding-bottom: 3rem;
	}
}